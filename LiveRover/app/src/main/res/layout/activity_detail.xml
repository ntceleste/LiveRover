<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/saffron"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/photoEarthDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/earth_date_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview"
        style="@style/LabelText" />

    <TextView
        android:id="@+id/photoEarthDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/photoEarthDateLabel"
        app:layout_constraintTop_toBottomOf="@+id/imageview" />

    <TextView
        android:id="@+id/photoSolDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/sol_date_label"
        app:layout_constraintStart_toEndOf="@+id/photoEarthDateText"
        app:layout_constraintTop_toBottomOf="@+id/imageview"
        style="@style/LabelText" />

    <TextView
        android:id="@+id/photoSolDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@+id/photoSolDateLabel"
        app:layout_constraintTop_toBottomOf="@+id/imageview" />

    <TextView
        android:id="@+id/roverNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/rover_name_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoEarthDateLabel"
        style="@style/LabelText" />

    <TextView
        android:id="@+id/roverNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/roverNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/photoEarthDateText" />

    <TextView
        android:id="@+id/roverStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/rover_status_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roverNameLabel"
        style="@style/LabelText" />

    <TextView
        android:id="@+id/roverStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/roverStatusLabel"
        app:layout_constraintTop_toBottomOf="@+id/roverNameText" />

    <TextView
        android:id="@+id/roverLaunchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/rover_launch_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roverStatusLabel"
        style="@style/LabelText" />

    <TextView
        android:id="@+id/roverLaunchText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/roverLaunchLabel"
        app:layout_constraintTop_toBottomOf="@+id/roverStatusText" />

    <TextView
        android:id="@+id/roverLandLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/rover_land_label"
        app:layout_constraintStart_toEndOf="@id/roverLaunchText"
        app:layout_constraintTop_toBottomOf="@+id/roverStatusLabel"
        style="@style/LabelText" />

    <TextView
        android:id="@+id/roverLandText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/roverLandLabel"
        app:layout_constraintTop_toBottomOf="@+id/roverStatusText" />

    <TextView
        android:id="@+id/roverCameraNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/camera_name_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roverLaunchLabel"
        style="@style/LabelText" />

    <TextView
        android:id="@+id/photoCameraNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/roverCameraNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/roverLandText" />



</androidx.constraintlayout.widget.ConstraintLayout>